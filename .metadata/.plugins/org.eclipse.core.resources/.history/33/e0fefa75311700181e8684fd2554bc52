import java.util.Scanner;

import static java.lang.System.*;
import java.util.Random;

public class GuessingGame
{
	private int upperBound, number, Guess, tries, tInB;
	private Boolean Go = true;
	public GuessingGame(int stop)
	{


	}

	public void playGame()
	{
		Scanner keyboard = new Scanner(System.in);
		out.print("Guessing Game - How many numbers? ");
		upperBound = keyboard.nextInt();
		number = (int) Math.random()*1 + upperBound;
		Guess = 0;
		tries = 0;
		tInB = 0;
		for (int i = 0; i< upperBound;i++)
		{
			
		}
		do{
			out.print("Enter a number between 1 and "+upperBound + " ");
			Guess = keyboard.nextInt();
			tries ++;
			if (Guess != number && Guess < upperBound && Guess > 0);
			{
				out.print("Enter a number between 1 and "+upperBound + " ");
				Guess = keyboard.nextInt();
				tInB++;
			}
			if (Guess > upperBound || Guess < 0);
			{
				out.println("Number out of range!");
			}
			if (Guess == number);
			{
				out.println();
				out.println("It took you "+ tries + " tries to guess "+ number+".");
				out.println("You guessed wrong "+(tInB/tries)+" percent of the time.");
				break;
			}
		}while(true);
		
		

	}

	public String toString()
	{
		String output="";
		return output;
	}
}